{
  "name": "react-native-animated-image-loader",
  "version": "0.1.3",
  "description": "update this description",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-animated-image-loader-example",
    "test": "jest -u",
    "coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acronimax/react-native-animated-image-loader.git"
  },
  "author": "acronimax <dev@acronimax.io> (https://acronimax.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/acronimax/react-native-animated-image-loader/issues"
  },
  "homepage": "https://github.com/acronimax/react-native-animated-image-loader#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.2.2",
    "@evilmartians/lefthook": "^1.7.1",
    "@react-native/babel-preset": "0.74.85",
    "@react-native/eslint-config": "^0.74.85",
    "@release-it/conventional-changelog": "^8.0.1",
    "@testing-library/react-native": "^12.5.1",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.66",
    "@types/react-native": "^0.73.0",
    "@types/react-test-renderer": "^18.3.0",
    "commitlint": "^19.3.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ft-flow": "^3.0.7",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.2.5",
    "react": "18.2.0",
    "react-native": "0.74.3",
    "react-native-builder-bob": "^0.25.0",
    "react-test-renderer": "^18.3.1",
    "release-it": "^17.5.0",
    "typescript": "^5.1.6"
  },
  "resolutions": {
    "@types/react": "18.2.66"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": ">= 18.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ],
      "react/react-in-jsx-scope": 0
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "coverage"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
