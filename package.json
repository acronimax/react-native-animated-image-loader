{
  "name": "react-native-animated-image-loader",
  "version": "0.2.0",
  "description": "Simple Elegant Animated Image Loader",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-animated-image-loader-example",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acronimax/react-native-animated-image-loader.git"
  },
  "author": "acronimax <support@acronimax.io> (https://acronimax.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/acronimax/react-native-animated-image-loader/issues"
  },
  "homepage": "https://github.com/acronimax/react-native-animated-image-loader#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@commitlint/config-conventional": "^19.6.0",
    "@evilmartians/lefthook": "^1.10.1",
    "@react-native/babel-preset": "0.81.3",
    "@react-native/eslint-config": "^0.81.3",
    "@react-native/metro-config": "^0.81.3",
    "@release-it/conventional-changelog": "^9.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jsdom": "^27",
    "@types/react": "^19.1.12",
    "@types/react-native-web": "^0",
    "@types/react-test-renderer": "^19.1.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "4.0.15",
    "babel-plugin-react-native-web": "^0.21.2",
    "commitlint": "^19.6.0",
    "del-cli": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-prettier": "^5.2.1",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "metro-react-native-babel-preset": "*",
    "prettier": "^3.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.3",
    "react-native-builder-bob": "^0.40.15",
    "react-native-web": "^0.21.2",
    "react-test-renderer": "19.1.0",
    "release-it": "^17.10.0",
    "typescript": "~5.9.2",
    "vite-plugin-babel": "^1.3.2",
    "vitest": "^4.0.15"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-native": ">=0.81.0"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.9.4",
  "engines": {
    "node": ">= 20.19.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "coverage"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
